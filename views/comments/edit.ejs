<%- include("../partials/header") %> 

<div class="container">
  <div class="row">
    <div class="col-sm-3 col-md-6">
      <div class="thumbnail">
        <img src="<%= campground.image %>" alt="">
      </div>
    </div>
    <div class="col-sm-9 col-md-6">
      <h1 style="text-align: center">Update comment <%= campground.name %></h1>
      <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <textarea class="form-control" name="comment[text]" rows="5" placeholder="text"><%= comment.text %></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-large btn-success btn-block">Submit</button>
        </div>
      </form>
    </div>
  </div>
  <a href="/campgrounds/<%= campground._id %>">Go Back</a>
</div>

<%- include("../partials/footer") %> 